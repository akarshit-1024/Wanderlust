<% layout("/layouts/boilerplate") -%> 
<%- include("../include/mininavbar") %>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  
  <% for(let data of allDataOfListings){ %>
  <!--  Bootstrap card -->
  <a href="/listinges/<%=data._id%>" class="text-decoration-none">
    <div class="card card-2">
      <img
        src="<%=data.image.url%>"
        class="card-img-top"
        alt="..."
        style="height: 20rem"
      />
      <div class="card-img-overlay">&#10084;</div>
      <div class="card-body">
        <p class="card-text">
          <b><%= data.title%></b><br />
          <%= data.location%><br />
          &#8377;<%= data.price.toLocaleString("en-IN")%> /night
          <b class="price-gst">&nbsp;+ 18 % GST</b>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

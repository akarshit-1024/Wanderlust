<% layout("/layouts/boilerplate") -%>
<body class="wraper">
  <h2 class="offset-3 mt-3 mb-3">Create new listing</h2>
  <div class="offset-3 row">
    <div class="col-8">
  <form action="/listinges" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input
        type="text"
        class="form-control"
        name="listingObj[title]"
        id="title"
        aria-describedby="emailHelp"
        required
      />
      <!-- <div class="valid-feedback">
        Looks good!
      </div> -->
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Descrption</label>
      <input
        type="text"
        class="form-control"
        name="listingObj[description]"
        id="description"
        aria-describedby="emailHelp"
        required
      />
    </div>
    <div class="mb-3">
      <label for="imgUrl" class="form-label">Image Link/URL</label>
      <input
        type="text"
        class="form-control"
        name="listingObj[image]"
        id="imgUrl"
        aria-describedby="emailHelp"
      />
    </div>
    <div class="row mb-3">
      <div class="col-md-4">
        <label for="priceInput" class="form-label">Price</label>
        <input
          type="number"
          id="priceInput"
          class="form-control"
          name="listingObj[price]"
          placeholder="Price"
          aria-label="Price"
          required
          min="0"
          step="0.01"
        />
      </div>
      <div class="col-md-8">
        <label for="countryInput" class="form-label">Country</label>
        <input
          type="text"
          id="countryInput"
          class="form-control"
          name="listingObj[country]"
          placeholder="Country"
          aria-label="Country"
          required
        />
      </div>
      
    </div>

    <div class="mb-3">
      <label for="location" class="form-label">Location </label>
      <input
        type="text"
        class="form-control"
        name="listingObj[location]"
        id="location"
        aria-describedby="emailHelp"
        required
      />
      <div class="invalid-feedback">
        Please provide a valid location.
      </div>
    </div>
    <button class="btn btn-primary">submit</button>
  </form>
  </div>
  </div>
</body>

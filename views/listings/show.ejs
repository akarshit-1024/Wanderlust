<% layout("/layouts/boilerplate") -%>
<script>
  const mapToken = "<%= process.env.MAP_API_KEY %>";
  const listing = <%- JSON.stringify(listing) %>; 
</script>

<div class="container mt-4">
  <h3 class="text-center mb-4"><%= listing.title %></h3>

  <!-- Listing Image + Owner -->
  <div class="row justify-content-center">
    <div class="col-md-6">
      <img src="<%= listing.image.url %>" alt="image" class="img-fluid rounded shadow-sm mb-3" id="listing-img" />
      <p class="fw-medium text-start">
        Owned by <u><%= listing.owner.username %></u>
      </p>
    </div>
  </div>

  <!-- Listing Details -->
  <div class="row justify-content-center">
    <div class="col-md-6">
      <p class="fw-medium"><%= listing.description %></p>
      <p class="fw-medium"><%= listing.country %></p>
      <p class="fw-medium">&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
    </div>
  </div>

  <!-- Edit/Delete Buttons -->
  <% if (currentUser && currentUser._id.equals(listing.owner._id)) { %>
    <div class="row justify-content-center mb-3">
      <div class="col-md-6 d-flex gap-2">
        <form action="/listinges/<%= listing.id %>/edit" method="GET">
          <button class="btn btn-dark w-100">Edit</button>
        </form>
        <form action="/listinges/<%= listing.id %>?_method=DELETE" method="POST">
          <button class="btn btn-danger w-100">Delete</button>
        </form>
      </div>
    </div>
  <% } %>
  <!-- Review Section -->
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if (currentUser) { %>
        <hr />
        <h4>Leave a Review</h4>
        <form action="/listinges/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
          <div class="mt-3">
            <label for="rating">Rating</label>
            <fieldset class="starability-slot">
              <input type="radio" id="rating" class="input-no-rate" name="review[rating]" value="1" checked />
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1">1 star</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2">2 stars</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3">3 stars</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4">4 stars</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5">5 stars</label>
            </fieldset>
          </div>
          <div class="mb-3">
            <label for="comment">Write a Review</label>
            <textarea class="form-control" name="review[comment]" required id="comment" rows="3"></textarea>
            <div class="invalid-feedback">Please write a comment</div>
          </div>
          <button type="submit" class="btn btn-dark">Submit</button>
        </form>
      <% } %>

      <!-- Show All Reviews -->
      <div class="mt-4">
        <hr />
        <%if(listing.reviews.length>0 ){%>
        <h5>All Reviews</h5>
        <%}%>
        <div class="row">
          <% for (review of listing.reviews) { %>
            <div class="card col-md-5 m-2 shadow-sm" id="show-review">
              <div class="card-body">
                <h6 class="card-title"><%= review.author.username %></h6>
                <p class="starability-result card-text" data-rating="<%= review.rating %>">
                  Rating: <%= review.rating %>
                </p>
                <p class="card-text"><%= review.comment %></p>
                <% if (currentUser && review.author._id.equals(currentUser._id)) { %>
                  <form action="/listinges/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-dark mb-2">Delete</button>
                  </form>
                <% } %>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Map -->
  <div class="row mt-4 mb-3">
    <div class="col">
      <h4>Where you'll be</h4>
      <div id="map" class="rounded shadow" style="height: 400px;"></div>
    </div>
  </div>
</div>

<script src="/js/maps.js"></script>
